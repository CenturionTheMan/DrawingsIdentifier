<Application x:Class="DrawingIdentifierGui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DrawingIdentifierGui"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="dark" Color="#202020" />
            <SolidColorBrush x:Key="dark_gray" Color="#2D3142" />
            <SolidColorBrush x:Key="gray" Color="#4F5D75" />
            <SolidColorBrush x:Key="light_gray" Color="#BFC0C0" />
            <SolidColorBrush x:Key="red" Color="#c81d25" />
            <SolidColorBrush x:Key="gold" Color="#FFD100" />
            <!--<SolidColorBrush x:Key="white" Color="#fefcfb"/>-->

            <SolidColorBrush x:Key="white">
                <SolidColorBrush.Color>
                    <Color A="255" R="254" G="254" B="251"/>
                </SolidColorBrush.Color>
            </SolidColorBrush>
            <SolidColorBrush x:Key="blue" Color="#1985a1" />
        </ResourceDictionary>

    </Application.Resources>
</Application>
