<UserControl x:Class="DrawingIdentifierGui.Views.Controls.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DrawingIdentifierGui.Views.Controls"
             xmlns:components="clr-namespace:DrawingIdentifierGui.Components"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="100">
    <Grid>

        <StackPanel>

            <components:NavigationRadioButton
                Click="Button1_Click"
                Style="{DynamicResource NavigationRadioButton}"
                ImageSource="../../Images/nav-painting.png"
                ImageMargin="5"
                IsChecked="True" />

            <components:NavigationRadioButton
                Click="Button2_Click"
                Style="{DynamicResource NavigationRadioButton}"
                ImageSource="../../Images/nav-learning.png"
                ImageMargin="2" />

            <components:NavigationRadioButton
                Click="Button3_Click"
                Style="{DynamicResource NavigationRadioButton}"
                ImageSource="../../Images/nav-one.png"
                ImageMargin="6" />

            <components:NavigationRadioButton
                Click="Button4_Click"
                Style="{DynamicResource NavigationRadioButton}"
                ImageSource="../../Images/nav-two.png"
                ImageMargin="6" />

            <components:NavigationRadioButton
                Click="Button5_Click"
                Style="{DynamicResource NavigationRadioButton}"
                ImageSource="../../Images/nav-data.png"
                ImageMargin="5" />

            <components:NavigationRadioButton
                Click="Button6_Click"
                Style="{DynamicResource NavigationRadioButton}"
                ImageSource="../../Images/nav-question-mark.png"
                ImageMargin="5" />
        </StackPanel>
    </Grid>
</UserControl>